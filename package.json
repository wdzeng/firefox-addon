{
  "name": "firefox-addon",
  "version": "1.1.0-alpha.1",
  "description": "GitHub action for publishing extension to Firefox Add-on",
  "author": "hyperbola",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wdzeng/firefox-addon.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm clean && pnpm transpile && cp action.yml dist",
    "transpile": "esbuild src/index.ts --platform=node --target=node20 --minify --bundle --outfile=dist/index.cjs",
    "test": "pnpm clean && pnpm transpile:test && node -r dotenv/config dist/test/index.cjs dotenv_config_path=test/.env.local",
    "transpile:test": "esbuild test/index.ts --platform=node --target=node20 --minify --bundle --outfile=dist/test/index.cjs",
    "lint": "eslint src --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "adm-zip": "^0.5.15",
    "axios": "^1.7.3",
    "form-data": "^4.0.0",
    "glob": "^11.0.0",
    "jsonwebtoken": "^9.0.2",
    "ts-custom-error": "^3.3.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.15",
    "@types/tmp": "^0.2.6",
    "dotenv": "^16.4.5",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-config-wdzeng": "github:wdzeng/eslint-config#semver:~0.9.0",
    "prettier": "^3.3.3",
    "tmp": "^0.2.3",
    "typescript": "^5.5.4"
  },
  "pnpm": {
    "overrides": {
      "hasown": "npm:@nolyfill/hasown@^1",
      "is-core-module": "npm:@nolyfill/is-core-module@^1"
    },
    "patchedDependencies": {
      "adm-zip": "patches/adm-zip.patch"
    }
  }
}
